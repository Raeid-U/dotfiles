// --------------------------------
// Zed settings -- Raeid-U
// --------------------------------
{
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "assistant": {
    "enabled": false,
    "dock": "left",
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "ui_font_size": 13,
  "ui_font_family": "Andale Mono",
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "calt": false
  },
  "git_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "theme": {
    "mode": "dark",
    "light": "Atelier Dune Light",
    "dark": "Atelier Dune Dark"
  },
  "autosave": "off",
  "current_line_highlight": "all",
  "cursor_shape": "bar",
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": true,
    "activate_on_close": "history",
    "always_show_close_button": false
  },
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 15,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "always"
    }
  }
}
